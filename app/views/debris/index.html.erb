<%- model_class = Debri -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:word) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th>
      <th><%= model_class.human_attribute_name(:height) %></th>
      <th><%= model_class.human_attribute_name(:angle) %></th>
      <th><%= model_class.human_attribute_name(:object_type_id) %></th>
      <th><%= model_class.human_attribute_name(:deleted) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @debris.each do |debri| %>
      <tr>
        <td><%= link_to debri.id, debri_path(debri) %></td>
        <td><%= debri.word %></td>
        <td><%= debri.size %></td>
        <td><%= debri.height %></td>
        <td><%= debri.angle %></td>
        <td><%= debri.object_type_id %></td>
        <td><%= debri.deleted %></td>
        <td><%=l debri.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_debri_path(debri), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      debri_path(debri),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_debri_path,
            :class => 'btn btn-primary' %>
