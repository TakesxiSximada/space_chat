<%= simple_form_for @debri, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :word %>
  <%= f.input :size %>
  <%= f.input :height %>
  <%= f.input :angle %>
  <%= f.association :object_type %>
  <%= f.input :deleted %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                debris_path, :class => 'btn' %>
  </div>
<% end %>
